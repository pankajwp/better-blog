<div id="page-wrapper">
		<div class="row">
				<div class="col-lg-12">
						<h1 class="page-header">Categories <a href='/admin/add_cat' class='btn btn-primary pull-right'>Add Category</a></h1>						
				</div>
				<!-- /.col-lg-12 -->
		</div>
		<!-- /.row -->
		<div class="row">
				<% if(success_msg.length > 0) { %>
					<div class="alert alert-success alert-dismissible">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<strong>Success!</strong> <%= success_msg %>
					</div>
				<% } %>
				<% if(error.length > 0) { %>
					<div class="alert alert-danger alert-dismissible">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<strong>Error!</strong> <%= error %>
					</div>
				<% } %>
				

				<div class="col-lg-8 col-xs-12 col-md-offset-2">
					<div class="panel panel-default">
						<% if(categories) { %>
							<div class="panel-heading">
								Categories Lists
							</div>
							<!-- /.panel-heading -->
							<div class="panel-body">
								<div class="table-responsive">
									<table class="table table-striped table-bordered table-hover">
										<thead>
											<tr>
												<th>#</th>
												<th>Name</th>
												<th>Created At</th>
												<th>Updated At</th>
												<th colspan='2' class='text-center'>Action</th>
											</tr>
										</thead>
										<tbody>
											<% for(category of categories) { %>
												<tr>
													<td><%= category.id%></td>
													<td><%= category.name %></td>
													<td><%= setData.moment(category.createdAt).format("LL") %></td>
													<td><%= setData.moment(category.updatedAt).format("LL") %></td>
													<td><a href='/admin/edit_cat/<%= category.id%>' class='btn btn-sm btn-warning'>Edit</a></td>
													<td><a href='/admin/delete_cat/<%= category.id%>' onClick='return (confirm("Are you sure you want to delete this ?"))? true:false;' class='btn btn-sm btn-danger'>Delete</a></td>
												</tr>
											<% } %>
										</tbody>
									</table>
								</div>
								<!-- /.table-responsive -->
							</div>
						<% }else { %>
								<div class="panel-body">
									<h2> No categories found </h2>
								</div>
						<% } %>
						<!-- /.panel-body -->
					</div>
					<!-- /.panel -->
				</div>
				<!-- /.col-lg-6 -->


		</div>
		<!-- /.row -->
</div>
<!-- /#page-wrapper -->